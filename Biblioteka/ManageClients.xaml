<UserControl x:Class="Biblioteka.ManageClients"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Biblioteka"
             mc:Ignorable="d"  Loaded="ManageClients_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="50,50,50,50">
        <DockPanel>
            <StackPanel DockPanel.Dock="Right" Margin="10" MinWidth="200">
                <Label>Indeks</Label>
                <TextBox></TextBox>
                <Label>Imię</Label>
                <TextBox></TextBox>
                <Label>Nazwisko</Label>
                <TextBox></TextBox>
                <Label>Telefon</Label>
                <TextBox></TextBox>
                <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                    <Button Margin="10">Zapisz</Button>
                    <Button Margin="10" Click="wyjdz_Click">Wyjdź</Button>
                </StackPanel>
            </StackPanel>
            <ListBox Margin="10">
                
            </ListBox>
            
        </DockPanel>
    </Grid>
</UserControl>
