            <StackPanel DockPanel.Dock="Right" Margin="10" MinWidth="200">
                <Label>Indeks</Label>
                <TextBox></TextBox>
                <Label>Wypożyczenie</Label>
                <ComboBox></ComboBox>
                <Label>Data wypożyczenia</Label>
                <DatePicker></DatePicker>
                <Label>Data zwrotu</Label>
                <DatePicker></DatePicker>
                <Label>Kara</Label>
                <TextBox></TextBox>
                <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                    <Button Margin="10">Zapisz</Button>
                    <Button Margin="10" Click="wyjdz_Click">Wyjdź</Button>
                </StackPanel>
            </StackPanel>
            <ListBox Margin="10">

            </ListBox>

        </DockPanel>
    </Grid>
</UserControl>
