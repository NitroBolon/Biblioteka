<UserControl x:Class="Biblioteka.ManageFines"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Biblioteka"
             mc:Ignorable="d"  Loaded="ManageFines_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <DockPanel>
            <StackPanel DockPanel.Dock="Right" Margin="10" MinWidth="200">
                <Label>Indeks</Label>
                <TextBox Style="{StaticResource CustomTextBoxStyle}" Margin="5 0 5 0"></TextBox>
                <Label>Wypożyczenie</Label>
                <ComboBox  Margin="5 0 5 0" Style="{StaticResource ComboBoxStyle}">
                    <ComboBoxItem>chuj</ComboBoxItem>
                    <ComboBoxItem>dupa</ComboBoxItem>
                    <ComboBoxItem>cycki</ComboBoxItem>
                </ComboBox>
                <Label>Data wypożyczenia</Label>
                <DatePicker Margin="5 0 5 0"></DatePicker>
                <Label>Data zwrotu</Label>
                <DatePicker Margin="5 0 5 0"></DatePicker>
                <Label>Kara</Label>
                <TextBox Style="{StaticResource CustomTextBoxStyle}" Margin="5 0 5 0"></TextBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Margin="10"  Style="{StaticResource CustomButtonStyle}">Zapisz</Button>
                    <Button Margin="10" Click="wyjdz_Click" Style="{StaticResource CustomButtonStyle}">Wyjdź</Button>
                </StackPanel>
            </StackPanel>
            <ListBox Margin="10">

            </ListBox>

        </DockPanel>
    </Grid>
</UserControl>
