<Window x:Class="Biblioteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka"
        mc:Ignorable="d" FontSize="15"
        Title="Biblioteka" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel Width="300" DockPanel.Dock="Bottom">
                <Button Height="40" Margin="0,10,0,0">Zarządzanie klientami</Button>
                <Button Height="40" Margin="0,10,0,0">Zarządzanie katalogiem</Button>
                <Button Height="40" Margin="0,10,0,0">Wypożycz książkę</Button>
                <Button Height="40" Margin="0,10,0,90">Historia i kary</Button>
            </StackPanel>
            <Label DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,50,0,0" FontSize="50" FontWeight="Bold">Bibliotex</Label>
        </DockPanel>
    </Grid>
</Window>
